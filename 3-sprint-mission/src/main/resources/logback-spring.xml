<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender class="ch.qos.logback.core.ConsoleAppender" name="CONSOLE">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <file>./.logs/${LOG_FILE_NAME}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>./.logs/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxHistory>30</maxHistory>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>10MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="ERROR_FILE">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>
    <file>${LOG_PATH}/${LOG_FILE_NAME}-error.log</file>
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxHistory>30</maxHistory>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>10MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="BUSINESS_FILE">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId:-}] %logger{36} - %msg%n</pattern>
    </encoder>
    <file>./.logs/${LOG_FILE_NAME}-business.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>./.logs/${LOG_FILE_NAME}-business.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxHistory>30</maxHistory>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>10MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="PERFORMANCE_FILE">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId:-}] %logger{36} - %msg%n</pattern>
    </encoder>
    <file>./.logs/${LOG_FILE_NAME}-performance.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>./.logs/${LOG_FILE_NAME}-performance.%d{yyyy-MM-dd}.%i.log
      </fileNamePattern>
      <maxHistory>30</maxHistory>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>10MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <property name="CONSOLE_LOG_PATTERN"
    value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan([%X{traceId:-}]) %yellow(%logger{36}) - %msg%n"/>

  <property name="FILE_LOG_PATTERN"
    value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-}] %logger{36} - %msg%n"/>

  <property name="LOG_FILE_NAME" value="library-system"/>

  <springProfile name="prod">
    <logger level="WARN" name="org.springframework"/>
    <logger additivity="false" level="INFO" name="com.sprint.mission.discodeit">
      <appender-ref ref="FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger additivity="false" level="INFO" name="com.sprint.mission.discodeit.service">
      <appender-ref ref="BUSINESS_FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger additivity="false" level="WARN" name="com.sprint.mission.discodeit.aop.LoggingAspect">
      <appender-ref ref="PERFORMANCE_FILE"/>
    </logger>

    <logger level="WARN" name="org.hibernate"/>
    <logger level="WARN" name="com.zaxxer.hikari"/>
    <root level="WARN">
      <appender-ref ref="FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </root>
  </springProfile>

  <springProfile name="test">
    <logger additivity="false" level="DEBUG" name="com.sprint.mission.discodeit">
      <appender-ref ref="CONSOLE"/>
    </logger>

    <logger level="WARN" name="org.springframework.test"/>
    <logger level="WARN" name="org.springframework.boot.test"/>
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>

  <springProfile name="dev,default">
    <logger additivity="false" level="DEBUG" name="com.sprint.mission.discodeit">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger additivity="false" level="INFO" name="com.sprint.mission.discodeit.service">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="BUSINESS_FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger additivity="false" level="INFO" name="com.sprint.mission.discodeit.aop.LoggingAspect">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="PERFORMANCE_FILE"/>
    </logger>

    <logger level="INFO" name="org.springframework"/>
    <logger level="DEBUG" name="org.springframework.web"/>
    <logger level="DEBUG" name="org.springframework.transaction"/>

    <logger level="INFO" name="org.hibernate"/>
    <logger level="DEBUG" name="org.hibernate.SQL"/>
    <logger level="TRACE" name="org.hibernate.type.descriptor.sql.BasicBinder"/>
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
      <appender-ref ref="ERROR_FILE"/>
    </root>
  </springProfile>


</configuration>

<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- MDC 값을 포함한 로그 패턴 설정 -->
  <property name="LOG_PATTERN" value="%d{yy-MM-dd HH:mm:ss.SSS} [%thread] %clr(%-5level) %-36logger{36} [%X{requestId} | %X{requestMethod} | %X{requestUri}] - %msg%n"/>
  <property name="LOG_FILE_PATH" value=".logs"/>
  <property name="LOG_FILE_NAME" value="application"/>

  <!-- 로그 커스터마이징 -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- 현재 로그 파일 (최신 로그는 application.log에) -->
    <file>${LOG_FILE_PATH}/${LOG_FILE_NAME}.log</file>

    <!-- 일자별로 롤링, 30일 보관 -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_FILE_PATH}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>
        <pattern>${LOG_PATTERN}</pattern>
      </pattern>
    </encoder>
  </appender>

  <!-- dev 환경 -->
  <springProfile name="dev">
    <!-- dev 에서만 SQL DEBUG 로깅 -->
    <logger name="org.hibernate.SQL" level="DEBUG" />
    <root level="DEBUG">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
    </root>
  </springProfile>

  <!-- prod 환경 -->
  <springProfile name="prod">
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
    </root>
  </springProfile>
</configuration>